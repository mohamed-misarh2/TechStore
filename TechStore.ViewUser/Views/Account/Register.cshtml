@model TechStore.Dtos.AccountDtos.RegisterDto

@{
    ViewData["Title"] = "Register";
    Layout = null;
    <link rel="stylesheet" href="/css/Register.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css">


}


<div class="container">
    <div class="form-container " >
        <form  id="register-form" class="form" asp-action="Register" asp-controller="Account" method="post"
              enctype="multipart/form-data">
            <h2>@Localizer["Register"]</h2>
            <div class="form-group" hidden>
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
            </div>
            <div class="form-group">
                <label dir="auto" class="control-label">@Localizer["FirstName"]</label>
                @* <label asp-for="FirstName" class="control-label"></label> *@
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label dir="rtl" class="control-label">@Localizer["LastName"]</label>
                @* <label asp-for="LastName" class="control-label"></label> *@
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label dir="auto" class="control-label">@Localizer["UserName"]</label>
                @* <label asp-for="UserName" class="control-label"></label> *@
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label dir="auto" class="control-label">@Localizer["Password"]</label>
                @* <label asp-for="Password" class="control-label"></label> *@
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label dir="auto" class="control-label">@Localizer["PhoneNumber"]</label>
                @* <label asp-for="PhoneNumber" class="control-label"></label> *@
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label dir="auto" class="control-label">@Localizer["Email"]</label>
                @* <label asp-for="Email" class="control-label"></label> *@
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label dir="auto" class="control-label">@Localizer["Address"]</label>
                @* <label asp-for="Address" class="control-label"></label> *@
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label dir="auto" class="control-label">@Localizer["Image"]</label>
                @* <label asp-for="Image" class="control-label"></label> *@
                <input type="file" name="Image" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary btn-block">@Localizer["SignUp"]</button>

            <p>@Localizer["Already"] <a asp-action="Login" asp-controller="Account">@Localizer["Loginhere"] </a></p>

        </form>
    </div>
   
       
    
</div>


<span>
    <form asp-action="Index" asp-controller="Home">
        <button type="submit" class="btn  btn-block " style="max-width:auto">@Localizer["BacktoList"]</button>
    </form>
</span>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}