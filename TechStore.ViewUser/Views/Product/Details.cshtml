@model ResultView<GetProductSpecificationNameValueDtos>
<html>
    <head>
        <style>
            .image {
                flex: 0 1 20%;
            }

            .image img {
                width: 80%;
                height:15%;
                transition: 0.5s;
            }
            .container{
                width:90%;
            }
            .controller {
                position: absolute;
                left: 50%;
                bottom: 0px;
                transform: translateX(-50%);
                padding: 10px;
                display: flex;
                align-items: center;
                justify-content: center;
                width: fit-content;
                flex-wrap: wrap;
                min-width: 320px;
            }

            .controller img {
                width: 50px;
                height: 50px;
                border: 1px solid white;
                box-shadow: rgba(0, 0, 0, 0.16) 0px 3px 6px, rgba(0, 0, 0, 0.23) 0px 3px 6px;
                border-radius: 15px;
                padding: 5px;
                margin: 10px;
                object-fit: contain;
                cursor: pointer;
                transition: 0.3s;
            }

        * {
            box-sizing: border-box;
        }

        table {
            border-collapse: collapse;
            margin: 50px auto;
            width: 80%;
            font-size: 20px;
        }

        table,
        th,
        td {
            border-bottom: 1px solid;
            text-align: left;
            padding: 15px;
        }

        thead th {
            font-size: 30px;
            border: none;
        }

        .Discrp{
            font-size:1.2vw;
        }

        .price{
            font-size:1vw;
        }

        button{
            width:100%;
            margin-top:1vw;
        }
        .name{
            font-size:1vw;
        }

        .row{
            padding-top:1.1vw;
        }

        .content{
            margin-top:5vw;
        }
        </style>
    </head>
    <body>
    @if (Model.Entity != null && Model.Entity.productsDtos != null)
{
    <div class="container">
        <div class="row" style="padding-top:2vw;">
            <div class="col-6">
                    <div class="row">
                        <div class="col-2">
                            <div class="controller" style="display: flex; flex-direction: column;">
                                @foreach (var image in Model.Entity.productsDtos.Images)
                                {
                                    <div class="controller-image">
                                        <img class="product-image-photo" data-src="@image">
                                    </div>
                                }
                            </div>
                        </div>
                        <div class="col-10">
                            <div class="image">
                                <img alt="" src="@Model.Entity.productsDtos.Images.FirstOrDefault()">
                            </div>
                        </div>
                </div>
            </div>

            <div class="col-6 content">
                    @if (@Model.Entity.productsDtos.DiscountValue > 0)
                    {
                        <h4 class="name">@Model.Entity.productsDtos.ModelName</h4>
                        <p class="Discrp">@Model.Entity.productsDtos.Description</p>
                        <h3 class="price">@Model.Entity.productsDtos.DiscountedPrice EGP</h3>
                        <span class="price-container">
                            <span id="product-price-@(Model.Entity.productsDtos.Id)" data-price-amount="@Model.Entity.productsDtos.Price" data-price-type="finalPrice" class="price-wrapper" style="text-decoration:line-through">
                                @Model.Entity.productsDtos.Price <span class="currency"></span>
                            </span>
                            <span style="color:red">   @Model.Entity.productsDtos.DiscountValue% of</span>
                        </span>
                        <br />
                    }
                    else
                    {
                        <h2 class="name">@Model.Entity.productsDtos.ModelName</h2>
                        <p class="Discrp">@Model.Entity.productsDtos.Description</p>
                        <h2 class="price">@Model.Entity.productsDtos.Price EGP</h2>
                    }
                    <!-- Form for adding product to the cart -->
                    <form asp-action="AddToCart" asp-controller ="Cart" method="post">
                        <input type="hidden" name="productId" value="@Model.Entity.productsDtos.Id" />
                        <input type="hidden" name="Description" value="@Model.Entity.productsDtos.Description" />
                        @* checkdiscount *@
                        <input type="hidden" name="price" value="@Model.Entity.productsDtos.Price" />
                        <input type="hidden" name="CopyQuantity" value="@Model.Entity.productsDtos.Quantity" />
                        <input type="hidden" name="image" value="@Model.Entity.productsDtos.Images.FirstOrDefault()" />
                        <input type="hidden" name="quantity" value="1" min="1" />
                        <button style="width:30vw;height:7vh; " class="btn btn-dark">Add To Cart</button>
                    </form>
                
                    
            </div>
        </div>
    </div>
}
else
{
    <p>Error: Product data is unavailable.</p>
}



    <div>
        @if (Model.Entity != null && Model.Entity.specificationsNameValueDtos != null)
        {
            <table>
                <thead>
                <th>Specification</th>
                </thead>

                <tbody>
                    @foreach (var specification in Model.Entity.specificationsNameValueDtos)
                    {
                  
                        <tr>
                          <th>@specification.Name</th>
                          <td>@specification.Value</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>

    <script>
        window.onload = function () {
            var imgs = document.querySelectorAll(".controller img");
            var mainImage = document.querySelector(".image img");
            var hs = document.querySelector("h2");

            imgs.forEach((ele) => {
                ele.onclick = function () {
                    mainImage.src = ele.dataset.src; // Change the source of the main image
                };
            });
        };
    </script>
</body>
</html>
