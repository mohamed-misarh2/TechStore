<html>
    <head>

        <style>
            .row-edit{
                padding:50px;
            }
            .Details{
                border:1px black solid;
                padding:50px;
                border-radius:5px;
            }
            .summary{
                padding:40px;
            }
            .paypal{
                width:100%;
                height:100%;
            }
            /* .btn-dark{
                width:20vw;
                height:8vh;
            } */
        </style>
    </head>
    <body>
        <div class="container">
            <div class="row row-edit">
                <div class="col-md-6 Details">
                    <h1>Delivery Details</h1>
                    <form>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Address</label>
                            <input type="text" class="form-control" id="InputAddress" placeholder="Enter Address">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Phone</label>
                            <input type="text" class="form-control" id="eInputPhone" placeholder="Enter Phone">
                        </div>
                        <button hidden type="submit" class="btn btn-dark">Submit</button>
                    </form>
                </div>

                <div class="col-md-1">
                </div>

                <div class="col-md-5 summary">

                    <h2>Order Summary</h2>
                    <div class="row">
                        <div class="col-md-6">
                            <p>Quantity</p>
                            <p>ItemValue</p>
                            <p>Total Price</p>
                        </div>

                        <div class="col-md-6">

                        </div>
                    </div>
                    <div class="row">
                        <a class="btn" href="/PayPal/PaymentWithPaypal">
                            <img src="~/PayPalImage/PayPal.png" alt="PayPal Logo" class="paypal">
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>