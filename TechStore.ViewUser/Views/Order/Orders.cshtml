@model ResultDataList<GetAllOrderDto>
<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/Order.css">
</head>

<body>

    @if (Model.Entities != null)
    {
        <div class="container">
            <h2>Your Orders</h2>
            <div class="row">
                @foreach (var order in Model.Entities)
                {
                    <div class="col-md-6 col-l-3 col-xl-4">
                        <div class="order-card">
                            <div class="order-header">
                                <h3>Order ID: @order.Id</h3>
                            </div>
                            <div class="order-details">
                                <p><span>Order Date:</span> @order.OrderDate</p>
                                <p><span>Address:</span> @order.ShippingAddress</p>
                                <p><span>Status:</span> @order.OrderStatus</p>
                                <p><span>TotalPrice:</span> @order.TotalPrice EGP</p>
                                <form asp-controller="Order" asp-action="GetAllOrderItems" method="get" class="butnon">
                                    <input type="hidden" name="OrderId" value="@order.Id" />
                                    <button type="submit" class="btn btn-outline-dark">Details</button>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
    else
    {
        <p>No orders found.</p>
    }

 </body>



